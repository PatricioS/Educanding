<p id="notice"><%= notice %></p>

<p>
	Escrito por: <%=@question.user.email %>
  <strong>Titulo:</strong>
  <%= @question.titulo %>
</p>

<p>
  <strong>Texto:</strong>
  <%= @question.texto %>
</p>


<div class="field">
  <h3> Preguntas</h3>
  <% if user_signed_in? %>
  <%= render "answers/form" %>
  <%end%>
  
  <td><%= link_to 'Mostrar', @question_answer %></td>
  <ul>
    <% @question.answers.each do |answer| %>
      <li>
        <%= answer.texto %> - <%= answer.user.email %>
      </li>
      <%end%>
    </ul>
  </div>

<% if user_signed_in? %>
<% if @question.user.email==current_user.email %>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%end%>
<%end%>
<%= link_to 'Back', questions_path %>
