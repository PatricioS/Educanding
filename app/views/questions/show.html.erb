<p id="notice"><%= notice %></p>

<p>
<br>
<br>
<table width="50%" border="2" cellpadding="2" cellspacing="0" bordercolor="#000000" BGCOLOR="#f2f2f2">
	<tr> 
		<th><strong>Titulo de la pregunta: <%= @question.titulo %></strong>	</th>
	</tr>
	<tr> 
		<td>Cuerpo de la pregunta: <br> <%= @question.texto %> <br>
		-----------------------------------------------------------------------------------------------------
		<br>
		<strong>Escrito por:  <%= @question.user.email %> | fecha de creacion: <%= @question.created_at%> </td> </strong>
	</tr>
</table>
  
</p>

<div class="field">

 <!-- <td><%= link_to 'Mostrar', @question_answer %></td> -->

<table frame="box" border="3" cellpadding="2" bordercolor="#000000" BGCOLOR="#a9a9f5" align="center" width="90%">
	<h1 align="left">--------------------------------------------Respuestas--------------------------------------------</h1>
	<tr></tr>
	<td align="center">	<br>

	<% @question.answers.each do |answer| %>

	<table width="90%" border="2" cellpadding="2" cellspacing="0" bordercolor="#000000" BGCOLOR="#fafafa" >
		<tr> 
			<th BGCOLOR="#89daf5" ><strong>Respuesta del usuario: <%= answer.user.email %></strong>	</th>
		</tr>
		<tr> 
			<td><br> <%= answer.texto %> <br>
			-----------------------------------------------------------------------------------------------------
			<br>
			<strong>fecha de creacion: <%= answer.created_at%> </strong> | 
			<%=link_to 'Mostrar', question_answer_path(@question,answer) %> 
			<% if answer.user.email==current_user.email %>
				<%=link_to 'Editar', edit_question_answer_path(@question,answer) %>
			<%end%>
			</td>
		</tr>
			<br>
		<td align="center" BGCOLOR="#e0e6f8">
		
			<% answer.answercomments.each do |answercomment| %>
			<table width="80%" border="3" cellpadding="2" cellspacing="1" bordercolor="#000000" BGCOLOR="#f2f2f1" >
				<tr> 
				<br><br>
					<th><strong>Comentario del usuario: <%= answercomment.user.email %></strong>	</th>
				</tr>
				<tr> 
					<td><br> <%= answercomment.texto %> <br>
					-----------------------------------------------------------------------------------------------------
					<br>
					<strong>fecha de creacion: <%= answercomment.created_at%> </strong> | 
					</td>
				</tr>
			</table>

			<%end%>
		</td>
	</table>

	<br>
	<%end%>
	</td>
</table>



<%link_to 'nuevo', new_question_answer_path(@question) %> 
<br>
  <% if user_signed_in? %>
  <h1>Responder: </h1>
  <%= render "answers/form" %>
  <%end%>


<% if user_signed_in? %>
<% if @question.user.email==current_user.email %>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%end%>
<%end%>
