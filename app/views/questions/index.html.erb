<p id="notice"><%= notice %></p>
<h1 class="my-5" >Preguntas Hechas</h1>

<h4><%= link_to 'Nueva pregunta', new_question_path %></h4>

<table BGCOLOR="#d6dbdf" width="100%" align="center">
  <thead>
    <tr BGCOLOR="gray" >
      <th>Titulo</th>
      <th>Texto</th>
      <th>Autor</th>
      <th>Puntaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.all.each do |question| %>
      <tr>
        <td><%= question.titulo %></td>
        <td><%= question.texto %></td>
        <td><%= question.user.email %></td>
        <td><%= question.puntaje %> </td>
        <td align="center" ><%= link_to 'Mostrar', question %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>




