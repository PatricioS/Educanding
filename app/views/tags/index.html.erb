<h1>Etiquetas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.nombre %></td>
        <td><%= link_to 'Show', tag %></td>
        <% if user_signed_in? %>
        <% if current_user.email=="administrador@gmail.com" %>
         <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
          <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <% end %>
       <% end %>
       </tr>
    <% end %>
  </tbody>
</table>

<br>
 <% if user_signed_in? %>
<%= link_to 'New Tag', new_tag_path %>
<%end%>
