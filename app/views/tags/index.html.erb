<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.nombre %></td>
        <td><%= link_to 'Mostrar', tag %></td>
        <% if user_signed_in? %>
        <% if current_user.email=="administrador@gmail.com" %>
         <td><%= link_to 'Editar', edit_tag_path(tag) %></td>
          <td><%= link_to 'Eliminar', tag, method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>
       <% end %>
       <% end %>
       </tr>
    <% end %>
  </tbody>
</table>

