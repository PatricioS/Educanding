 <% if Question.any? %>
<% @question=Question.first %>
<% if Question.orden== true %>
  <h3><%= link_to "Ordenar por fecha de creacion",  root_path ,class: "btn btn-primary" , style: "color:white" %></h3>
  <%@questions=Question.respuestas%>
  <%Question.orden = false %>
<%else%>
  <h3><%= link_to "Ordenar por cantidad de Respuestas",  question_cambiar_orden_path(@question), method: :post ,class: "btn btn-primary" , style: "color:white" %></h3>
  <% @questions=Question.all%>
  <%end%>  

<font color="white">
<center>
<h2 style="background-color: darkblue"  >
  <strong style="color:white">LISTA DE PREGUNTAS </strong>
 </h2> 
</center>
</font>

  

<table BGCOLOR="#d6dbdf" width="100%" align="center">
  <thead>
    <tr BGCOLOR="#2e4053" >
      <th style="color:white"> &nbsp; Titulo</th>
      <th style="color:white">Texto</th>
      <th style="color:white">Autor</th>
      <th style="color:white">Respuestas</th>
      <th style="color:white">Etiquetas</th>
      <th style="color:white">Puntaje</th>
      <th style="color:white">Fecha y hora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><strong><%= link_to question.titulo, question , style: "color:blue" %></strong> </td>
        <td><%= question.texto %></td>
        <td><%= link_to question.user.email, question.user, style: "color:green" %></td>
        <td><%=question.cant_answers%></td>
        <td><% question.tags.each do |tag| %>

           <%if tag.borrado == true %>
            <%=link_to tag.nombre, tag , style: "color:red"%>
          <%else%>
            <%=link_to tag.nombre, tag , style: "color:blue"%>
          <%end%>
        <% end %> </td>
        <td><%= question.puntaje %> </td>
        <td><%= question["created_at"].strftime("%I:%M %p %d-%b-%y") %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
