<h1 class="my-5">Registro</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :nombre, "Nombre"%><br />
    <%= f.text_field :nombre, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :apellido, "Apellido" %><br />
    <%= f.text_field :apellido, required: true %>
  </div>

  <div class="field">
    <%= f.label :facultad, "Facultad" %><br />
    <%= f.select :facultad, Facultad.all.collect { |p| [ p.nombre] }, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password , "Contraseña"%>
    <% if @minimum_password_length %>
    <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
