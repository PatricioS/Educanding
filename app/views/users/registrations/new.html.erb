<h1 class="my-5">Registro</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <strong><%= f.label :nombre, "Nombre"%></strong>
    <%= f.text_field :nombre, autofocus: true, required: true %>
  </div>
<br>
  <div class="field">
    <strong><%= f.label :apellido, "Apellido" %></strong>
    <%= f.text_field :apellido, required: true %>
  </div>
<br>

  <div class="field">
    <%= f.label :facultad, "Facultad" %><br />
    <%= f.select  :facultad_id, Facultad.all.collect { |p|  [p.nombre, p.id] }%>
  </div>
<br>

  <div class="field">
    <strong><%= f.label :email %><strong>
    <%= f.email_field :email %>
  </div>
<br>

  <div class="field">
    <strong><%= f.label :password , "Contraseña"%><strong>
    <% if @minimum_password_length %>
    <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
<br>

  <div class="field">
    <strong><%= f.label :password_confirmation %></strong>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
<br>

  <div class="actions">
    <%= f.submit "Registrarse" , class: "btn btn-primary"%>
  </div>
<% end %>

<%= render "users/shared/links" %>
