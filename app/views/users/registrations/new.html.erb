
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="container">
  <div class="panel-center">
    <div class="card card-outline-secondary my-4">
      <div class="card-header">
        <h3 style="color:darkblue"><Strong>Registro </strong></h3>
      </div>
      <div class="card-body">
        <div class="field">
            <strong><%= f.label :nombre, "Nombre"%></strong>
            <%= f.text_field :nombre, autofocus: true, required: true %>
        </div>
        <hr>
        <div class="field">
          <strong><%= f.label :apellido, "Apellido" %></strong>
          <%= f.text_field :apellido, required: true %>
        </div>
        <hr>
        <div class="field">
            <%= f.label :facultad, "Facultad" %><br />
            <%= f.select  :facultad_id, Facultad.all.collect { |p|  [p.nombre, p.id] }%>
        </div>
        <hr>
        <div class="field">
             <strong><%= f.label :email %><strong>
              <%= f.email_field :email %>
        </div>

        <div class="field">
            <strong><%= f.label :password , "Contraseña"%><strong>
          <% if @minimum_password_length %>
          <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <hr>
        <div class="field">
             <strong><%= f.label :password_confirmation %></strong>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
        <hr>
          <div class="actions">
        <%= f.submit "Crear Usuario", class: "btn btn-primary" %>
        </div>


      </div>
      </div>
  </div>
</div>
</div>
<br>
<%end%>
<h3><%= link_to "Volver", :back , class: "btn btn-info", style: "color:white" %> </h3>

